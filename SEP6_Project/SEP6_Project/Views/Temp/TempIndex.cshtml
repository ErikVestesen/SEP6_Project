@{
    ViewData["Title"] = "Home Page";
}
@model SEP6_Project.Models.TempModel
<html>
<body class="is-preload">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>

    <!-- Header -->
    <section id="header">
        <div class="inner">
            <span class="icon solid major fa-cloud"></span>
            <h1>
                Hi, this is <strong>SEP6</strong>, a <strong>CLOUD</strong> project by<br />
                Arshad, Erik and Casper. You are on page 2. <br />
            </h1>
            <p>
                Data visualization of NYC flights data,<br />
                this page displays various temperature and weather data.
            </p>
            <br />
            <ul>
                <li><a href="#one" class="button scrolly">Discover</a></li>
                <br />
                <li><input type="button" value="Flight data" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" /></li>
                <br />
                <li><input type="button" value="Weather data" onclick="@("window.location.href='" + @Url.Action("Tempindex", "Temp") + "'");" /></li>
                <br />
                <li><input type="button" value="Weather data mean" onclick="@("window.location.href='" + @Url.Action("MeanIndex", "Mean") + "'");" /></li>
                <br />
                <li><input type="button" value="Time and Manufacturer data" onclick="@("window.location.href='" + @Url.Action("Depindex", "DepMan") + "'");" /></li>
            </ul>
        </div>
    </section>

    <!-- 1 - For each of the three origins, all temperature attributes (i.e. attributes involving a
    temperature unit) in degree Celsius (i.e. you need to convert from Fahrenheit to Celsius) -->

    <section id="four" class="main style2 special">
        <div class="container">
            <header class="major">
                <div id="tempChartJFK" style="height: 450px;"></div>
            </header>
            <p>All temperature attributes from JFK.</p>
        </div>
    </section>

    <section id="four" class="main style2 special">
        <div class="container">
            <header class="major">
                <div id="tempChartEWR" style="height: 450px;"></div>
            </header>
            <p>All temperature attributes from EWR.</p>
        </div>
    </section>

    <section id="four" class="main style2 special">
        <div class="container">
            <header class="major">
                <div id="tempChartLGA" style="height: 450px;"></div>
            </header>
            <p>All temperature attributes from LGA.</p>
        </div>
    </section>

    
    <!-- Footer -->
    <section id="footer">
        <ul class="icons">
            <li><a href="#" class="icon brands alt fa-twitter"><span class="label">Twitter</span></a></li>
            <li><a href="#" class="icon brands alt fa-facebook-f"><span class="label">Facebook</span></a></li>
            <li><a href="#" class="icon brands alt fa-instagram"><span class="label">Instagram</span></a></li>
            <li><a href="#" class="icon brands alt fa-github"><span class="label">GitHub</span></a></li>
            <li><a href="#" class="icon solid alt fa-envelope"><span class="label">Email</span></a></li>
        </ul>
        <ul class="copyright">
            <li>&copy; Untitled</li>
        </ul>
    </section>

    <!-- Scripts -->
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/jquery.scrolly.min.js"></script>
    <script src="~/assets/js/browser.min.js"></script>
    <script src="~/assets/js/breakpoints.min.js"></script>
    <script src="~/assets/js/util.js"></script>
    <script src="~/assets/js/main.js"></script>

    <script src="~/js/temps.js"></script>


</body>
</html>
